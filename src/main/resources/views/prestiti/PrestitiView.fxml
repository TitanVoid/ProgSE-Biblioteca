<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.441"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.prestiti.PrestitiController">
    <children>
        <!-- Header section - fixed height -->
        <HBox prefHeight="84.0">
            <children>
                <MenuButton alignment="CENTER" mnemonicParsing="false" prefHeight="26.0" prefWidth="119.0" text="Prestiti" textAlignment="CENTER">
                    <items>
                        <MenuItem fx:id="utenti" mnemonicParsing="false" onAction="#onChangeViewMode" text="Utenti" userData="UTENTI" />
                        <MenuItem fx:id="libri" mnemonicParsing="false" onAction="#onChangeViewMode" text="Libri" userData="LIBRI" />
                    </items>
                    <HBox.margin>
                        <Insets left="40.0" top="30.0" />
                    </HBox.margin>
                </MenuButton>
            </children>
        </HBox>

        <!-- Content section - grows to fill available space -->
        <AnchorPane VBox.vgrow="ALWAYS">
            <children>
                <SplitPane dividerPositions="0.8"
                           AnchorPane.topAnchor="0.0"
                           AnchorPane.bottomAnchor="0.0"
                           AnchorPane.leftAnchor="0.0"
                           AnchorPane.rightAnchor="0.0">
                    <items>
                        <!-- Table area -->
                        <AnchorPane minWidth="0.0">
                            <children>
                                <TableView fx:id="tablePrestiti"
                                           AnchorPane.topAnchor="0.0"
                                           AnchorPane.bottomAnchor="0.0"
                                           AnchorPane.leftAnchor="0.0"
                                           AnchorPane.rightAnchor="0.0">
                                    <columns>
                                        <TableColumn fx:id="matricolaClm" prefWidth="120.0" text="Matricola" />
                                        <TableColumn fx:id="isbnClm" prefWidth="150.0" text="ISBN" />
                                        <TableColumn fx:id="dataInizioClm" prefWidth="120.0" text="Data Inizio" />
                                        <TableColumn fx:id="dataScadenzaClm" prefWidth="120.0" text="Data Scadenza" />
                                        <TableColumn fx:id="dataRestituzioneClm" prefWidth="140.0" text="Data Restituzione" />
                                    </columns>
                                </TableView>
                            </children>
                        </AnchorPane>

                        <!-- Button sidebar -->
                        <AnchorPane minWidth="138.0" prefWidth="138.0" maxWidth="138.0">
                            <children>
                                <VBox alignment="TOP_CENTER" spacing="30.0"
                                      AnchorPane.topAnchor="30.0"
                                      AnchorPane.leftAnchor="10.0"
                                      AnchorPane.rightAnchor="10.0">
                                    <children>
                                        <Button mnemonicParsing="false" onAction="#onRegisterLoan" text="Inserisci" maxWidth="Infinity" />
                                        <Button mnemonicParsing="false" onAction="#onExtendLoan" text="Estendi" maxWidth="Infinity" />
                                        <Button mnemonicParsing="false" onAction="#onReturnLoan" text="Restituzione" maxWidth="Infinity" />
                                    </children>
                                </VBox>
                            </children>
                        </AnchorPane>
                    </items>
                </SplitPane>
            </children>
        </AnchorPane>
    </children>
</VBox>