<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.Region?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox xmlns="http://javafx.com/javafx/8.0.441" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.prestiti.PrestitiController">
    <children>
        <HBox prefHeight="84.0">
            <children>
                <MenuButton alignment="CENTER" mnemonicParsing="false" prefHeight="26.0" prefWidth="119.0" text="Prestiti" textAlignment="CENTER">
                    <items>
                        <MenuItem fx:id="utenti" mnemonicParsing="false" onAction="#onChangeViewMode" text="Utenti" userData="UTENTI" />
                        <MenuItem fx:id="libri" mnemonicParsing="false" onAction="#onChangeViewMode" text="Libri" userData="LIBRI" />
                    </items>
                    <HBox.margin>
                        <Insets left="40.0" top="40.0" />
                    </HBox.margin>
                </MenuButton>

                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>

                        <RadioButton fx:id="btnTutti" onAction="#onFilterLoans" selected="true" text="TUTTI">

                            <toggleGroup>
                                <ToggleGroup fx:id="filtroGroup" />
                            </toggleGroup>
                            <HBox.margin>
                                <Insets left="20.0" top="5.0" />
                            </HBox.margin>
                        </RadioButton>

                        <RadioButton fx:id="btnAttivi" onAction="#onFilterLoans" text="ATTIVI" toggleGroup="$filtroGroup">

                            <HBox.margin>
                                <Insets left="10.0" top="5.0" />
                            </HBox.margin>
                        </RadioButton>

                        <RadioButton fx:id="btnConclusi" onAction="#onFilterLoans" text="CONCLUSI" toggleGroup="$filtroGroup">
                            <HBox.margin>
                                <Insets left="10.0" top="5.0" />
                            </HBox.margin>
                        </RadioButton>
                    </children>
                    <HBox.margin>
                        <Insets left="20.0" top="1.0" />
                    </HBox.margin>
                </HBox>

                <!-- Spacer -->
                <Region HBox.hgrow="ALWAYS"/>

                <!-- Logo top-right -->
                <ImageView fitHeight="75.0"
                           preserveRatio="true"
                           smooth="false">
                    <image>
                        <Image url="@/image/logo_standard.png"/>
                    </image>
                    <HBox.margin>
                        <Insets right="50.0" top="10.0" bottom="10.0"/>
                    </HBox.margin>
                </ImageView>


            </children>
        </HBox>

        <AnchorPane VBox.vgrow="ALWAYS">
            <children>
                <SplitPane dividerPositions="0.8" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <items>
                        <AnchorPane minWidth="0.0">
                            <children>
                                <TableView fx:id="tablePrestiti" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                    <columns>
                                        <TableColumn fx:id="matricolaClm" text="Matricola" />
                                        <TableColumn fx:id="isbnClm" text="ISBN" />
                                        <TableColumn fx:id="dataInizioClm" text="Data Inizio" />
                                        <TableColumn fx:id="dataScadenzaClm" text="Data Scadenza" />
                                        <TableColumn fx:id="dataRestituzioneClm" text="Data Restituzione" />
                                    </columns>
                                </TableView>
                            </children>
                        </AnchorPane>
                        <AnchorPane maxWidth="138.0" minWidth="138.0" prefWidth="138.0">
                            <children>
                                <VBox alignment="TOP_CENTER" spacing="30.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="30.0">
                                    <children>
                                        <Button fx:id="inserisciButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#onRegisterLoan" text="Inserisci" />
                                        <Button fx:id="estendiButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#onExtendLoan" text="Estendi" />
                                        <Button fx:id="restituzioneButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#onReturnLoan" text="Restituzione" />
                                    </children>
                                </VBox>
                            </children>
                        </AnchorPane>
                    </items>
                </SplitPane>
            </children>
        </AnchorPane>
    </children>
</VBox>