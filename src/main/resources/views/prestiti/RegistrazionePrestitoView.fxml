<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<VBox alignment="CENTER" spacing="12" xmlns="http://javafx.com/javafx/8.0.441"
      fx:controller="controllers.prestiti.RegistrazionePrestitoController"
      xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="24" left="28" right="28" top="24" />
    </padding>

    <children>
        <Label style="-fx-font-size: 18px; -fx-font-weight:  bold;" text="Inserisci dati prestito" />

        <GridPane hgap="10" prefWidth="350.0" vgap="12">
            <children>
                <Label text="Utente:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <ComboBox fx:id="utenteCombo" editable="true" onKeyReleased="#onUserType" onAction="#onUserSelect" promptText="Cerca utente per matricola o cognome"
                          prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Libro:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <ComboBox fx:id="libroCombo" editable="true" onKeyReleased="#onBookType" onAction="#onBookSelect" promptText="Cerca libro per ISBN o titolo"
                          prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Data Scadenza:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <DatePicker fx:id="dataScadenza" promptText="Seleziona data"
                            prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            </children>
            <columnConstraints>
                <ColumnConstraints />
                <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>
        </GridPane>

        <HBox alignment="CENTER" spacing="18" style="-fx-padding: 14 0 0 0;">
            <children>
                <Button fx:id="confermaBtn" onAction="#onConfirm" text="Conferma" />
                <Button fx:id="annullaBtn" onAction="#onCancel" text="Annulla" />
            </children>
        </HBox>
    </children>
</VBox>