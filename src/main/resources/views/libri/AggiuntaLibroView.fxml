<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<!--
  Interfaccia FXML semplice e compatibile Scene Builder, per inserimento dati anagrafici:
  - Campi: Nome, Cognome, Matricola, Email
  - Pulsanti: Conferma, Annulla
  Nessun controller specificato: apribile direttamente in Scene Builder.
  Salva come Anagrafica.fxml e apri col designer.
-->

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      spacing="12" alignment="CENTER">
    <padding>
        <Insets top="24" right="28" bottom="24" left="28"/>
    </padding>

    <children>
        <Label text="Inserisci i tuoi dati" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <GridPane hgap="10" vgap="12">
            <children>
                <Label text="Nome:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="nomeField" promptText="Nome" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Cognome:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="cognomeField" promptText="Cognome" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Matricola:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="matricolaField" promptText="Matricola" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <TextField fx:id="emailField" promptText="Email" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            </children>
        </GridPane>

        <HBox alignment="CENTER" spacing="18" style="-fx-padding: 14 0 0 0;">
            <children>
                <Button fx:id="confermaBtn" text="Conferma" />
                <Button fx:id="annullaBtn" text="Annulla" />
            </children>
        </HBox>
    </children>
</VBox>