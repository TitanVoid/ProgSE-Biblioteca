<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.441"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.libri.LibriController">
    <children>
        <!-- Header section - fixed height -->
        <HBox prefHeight="84.0">
            <children>
                <MenuButton mnemonicParsing="false" prefHeight="26.0" prefWidth="119.0" text="Libri">
                    <items>
                        <MenuItem fx:id="utenti" mnemonicParsing="false" onAction="#onChangeViewMode" text="Utenti" userData="UTENTI"/>
                        <MenuItem fx:id="prestiti" mnemonicParsing="false" onAction="#onChangeViewMode" text="Prestiti" userData="PRESTITI"/>
                    </items>
                    <HBox.margin>
                        <Insets left="40.0" top="30.0" />
                    </HBox.margin>
                </MenuButton>
                <TextField fx:id="searchBar" alignment="CENTER" onKeyTyped="#onSearchBook" prefHeight="26.0" prefWidth="340.0">
                    <HBox.margin>
                        <Insets left="20.0" top="30.0" />
                    </HBox.margin>
                </TextField>
            </children>
        </HBox>

        <!-- Content section - grows to fill available space -->
        <AnchorPane VBox.vgrow="ALWAYS">
            <children>
                <SplitPane dividerPositions="0.8"
                           AnchorPane.topAnchor="0.0"
                           AnchorPane.bottomAnchor="0.0"
                           AnchorPane.leftAnchor="0.0"
                           AnchorPane.rightAnchor="0.0">
                    <items>
                        <!-- Table area -->
                        <AnchorPane minWidth="0.0">
                            <children>
                                <TableView fx:id="tableLibri"
                                           AnchorPane.topAnchor="0.0"
                                           AnchorPane.bottomAnchor="0.0"
                                           AnchorPane.leftAnchor="0.0"
                                           AnchorPane.rightAnchor="0.0">
                                    <columns>
                                        <TableColumn fx:id="titleClm" prefWidth="150.0" text="Titolo" />
                                        <TableColumn fx:id="authorsClm" prefWidth="150.0" text="Autore/i" />
                                        <TableColumn fx:id="publishYearClm" prefWidth="120.0" text="Anno pubblicazione" />
                                        <TableColumn fx:id="idClm" prefWidth="150.0" text="Codice identificativo" />
                                        <TableColumn fx:id="copiesClm" prefWidth="100.0" text="Numero copie" />
                                    </columns>
                                </TableView>
                            </children>
                        </AnchorPane>

                        <!-- Button sidebar -->
                        <AnchorPane minWidth="138.0" prefWidth="138.0" maxWidth="138.0">
                            <children>
                                <VBox alignment="TOP_CENTER" spacing="30.0"
                                      AnchorPane.topAnchor="30.0"
                                      AnchorPane.leftAnchor="10.0"
                                      AnchorPane.rightAnchor="10.0">
                                    <children>
                                        <Button mnemonicParsing="false" onAction="#onAddBook" text="Aggiungi" maxWidth="Infinity" />
                                        <Button mnemonicParsing="false" onAction="#onModifyBook" text="Modifica" maxWidth="Infinity" />
                                        <Button mnemonicParsing="false" onAction="#onDeleteBook" text="Elimina" maxWidth="Infinity" />
                                    </children>
                                </VBox>
                            </children>
                        </AnchorPane>
                    </items>
                </SplitPane>
            </children>
        </AnchorPane>
    </children>
</VBox>